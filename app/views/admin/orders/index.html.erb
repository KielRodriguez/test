<p id="notice"><%= notice %></p>

<h1>Admin Orders</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Subtotal</th>
      <th>Taxes</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_orders.each do |admin_order| %>
      <tr>
        <td><%= admin_order.date %></td>
        <td><%= admin_order.subtotal %></td>
        <td><%= admin_order.taxes %></td>
        <td><%= admin_order.total %></td>
        <td><%= link_to 'Show', admin_order %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(admin_order) %></td>
        <td><%= link_to 'Destroy', admin_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

